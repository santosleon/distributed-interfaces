{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "Node",
    "outDir": "../dist",
    "skipLibCheck": true,
    "declaration": true,
    "lib": [ "esnext" ],
    "types": [ "node" ],
    "baseUrl": "./"
  },
  "ts-node": {
    "esm": true,
  },
  "include": [
    "./index.ts",
    "/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./hardhat",
    "./dist",
  ]
}
